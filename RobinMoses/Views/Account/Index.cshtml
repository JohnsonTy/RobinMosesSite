@model LoginVM
@{
    ViewBag.Title = "Admin Login";
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<h2 class="display-4" style="text-align: center;">Login</h2>
<div class="container" style="text-align: right;">
    <div class="center" id="MenuEdit">
        <br><br>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form method="post" asp-action="Index" asp-route-returnUrl="@Model.ReturnUrl">
            <div class="form-group row">
                <div class="col-sm-2"><label>Username:</label></div>
                <div class="col-sm-4">
                    <input type="text" asp-for="Username"
                           class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Username"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2"><label>Password:</label></div>
                <div class="col-sm-4">
                    <input type="password" asp-for="Password"
                           class="form-control" />
                </div>
                <div class="col">
                    <span asp-validation-for="Password"
                          class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="offset-sm-2 col-sm-4">
                    <br>
                    <input type="checkbox" title="Remember Me" asp-for="RememberMe"
                           class="form-check-inline" />
                    <label asp-for="RememberMe">Remember Me</label>
                </div>
            </div>
            <div class="row">
                <div class="offset-2 col-sm-4">
                    <br>
                    <button type="submit" class="btn btn-primary">Log In</button>
                </div>
            </div>
            <div class="row">
            </div>
        </form>
    </div>
</div>